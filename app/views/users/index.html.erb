<% provide(:title, 'Users') %>
<h1 class="headline headline-one">ユーザ一覧</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= will_paginate %>
      <table class="table table-condensed table-hover" id="table-users">
        <thead>
          <tr>
            <th>名前</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user.name, user_path(user.id) %>
              </td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <%= will_paginate %>
  </div>
</div>