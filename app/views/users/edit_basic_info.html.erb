<% provide(:title, "Edit basic-info") %>
<h1 class="headline headline-one">基本情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: update_basic_info_user_path(@user), local: true) do |f| %>
      <%= render 'shared/error_messages', object: @user %>

      <%= f.label :work_time, "指定勤務時間", class: "label-basic-info" %>
      <%= f.time_field :work_time, class: 'form-control' %>

      <%= f.label :basic_time, "基本勤務時間", class: "label-basic-info" %>
      <%= f.time_field :basic_time, class: 'form-control' %>
      
      <%= f.label :all_user, class: "checkbox inline", for: "all_user" do %>
        <%= f.check_box :all_user %>
        <span>全ユーザを編集対象にする。</span>
      <% end %>
      
      <%= f.submit "編集", class: "btn btn-primary btn-block btn-login" %>
    <% end %>
  </div>
</div>